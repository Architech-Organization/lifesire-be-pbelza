# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration (PostgreSQL - Production)
DB_TYPE=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lifespire
POSTGRES_USER=lifespire_user
POSTGRES_PASSWORD=lifespire_dev_password

# Database Configuration (SQLite - Mock/Dev)
# Uncomment to use SQLite instead of PostgreSQL
# DB_TYPE=sqlite
# SQLITE_DB_PATH=./data/lifespire.sqlite

# File Storage Configuration
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=./data/uploads
FILE_MAX_SIZE_MB=50

# Analysis Engine Configuration
ANALYSIS_ENGINE_TYPE=mock
# ANALYSIS_ENGINE_TYPE=openai
# OPENAI_API_KEY=your-openai-api-key
# ANALYSIS_ENGINE_TYPE=anthropic
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration (if needed)
# CORS_ORIGIN=http://localhost:3001

# API Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
